{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"lib": [
			"es2022"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"release",
		"out",
		"test-cases"
	]
}
